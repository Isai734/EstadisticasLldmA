<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_input"
        android:layout_marginBottom="@dimen/normal_padding"
        android:layout_marginTop="@dimen/padding_between"
        android:background="@color/colorAccent" />


    <EditText
        android:id="@+id/nombre_materia_etx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_padding"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Nombre de la materia"
        android:inputType="textPersonName"
        android:padding="@dimen/edit_text_padding"
        android:layout_marginBottom="@dimen/padding_between"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <EditText
        android:id="@+id/alias_materia_etx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Alias de la materia "
        android:inputType="textPersonName"
        android:padding="@dimen/edit_text_padding"
        android:paddingBottom="@dimen/normal_padding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/nombre_materia_etx"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/info"
        android:textColor="@android:color/white"
        android:text="Puedes escribir un alias por ejemplo:"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alias_materia_etx"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/info1"
        android:textColor="@android:color/white"
        android:text="Matematicas: Mticas"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/guardar_materia_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/card_margin"
        android:background="@color/colorAccent"
        android:paddingBottom="@dimen/card_margin"
        android:paddingLeft="@dimen/margin_divider"
        android:paddingRight="@dimen/margin_divider"
        android:paddingTop="@dimen/card_margin"
        android:text="Guardar"
        android:layout_below="@id/info1"
        android:textColor="@android:color/white" />


</RelativeLayout>